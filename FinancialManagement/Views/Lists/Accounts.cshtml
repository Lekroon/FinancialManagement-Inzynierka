@model IEnumerable<FinancialAccountResponse>

@{
    ViewBag.Title = "Financial account list";
}

<form action="accounts" method="get">
    <h1>Financial accounts list</h1>

    <div class="box flex">
        <div class="flex-1">
            <input type="text" id="Search" class="form-input" placeholder="Search" name="searchString" value="@ViewBag.SearchString"/>
        </div>

        <div class="flex-1">
            <button class="button button-blue-back">Search</button>
            <a style="text-decoration: none; color: white; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; cursor: default;"
               href="accounts" class="button button-red-back">
                Clear
            </a>
        </div>
    </div>

    <table class="table w-100 mt">
        <thead>
            <tr>
                <th>Account ID</th>
                <th>
                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData)
                           {
                               { "ColumnName", nameof(FinancialAccountResponse.AccountName) },
                               { "DisplayName", "Account Name" }
                           })
                </th>

                <th>
                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData)
                           {
                               { "ColumnName", nameof(FinancialAccountResponse.Balance) },
                               { "DisplayName", "Balance" }
                           })
                </th>

                <th>
                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData)
                           {
                               { "ColumnName", nameof(FinancialAccountResponse.CurrencyName) },
                               { "DisplayName", "Currency Code" }
                           })
                </th>
                <th>User ID</th>
                <th>Currency ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var financialAccount in Model)
            {
                <tr>
                    <td>@financialAccount.AccountId</td>
                    <td>@financialAccount.AccountName</td>
                    <td>@financialAccount.Balance</td>
                    <td>@financialAccount.CurrencyName</td>
                    <td>@financialAccount.UserId</td>
                    <td>@financialAccount.CurrencyId</td>
                </tr>
            }
        </tbody>
    </table>
</form>